<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black_main"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cv_tv"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/background_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_tv_top_poster"
            android:layout_width="104dp"
            android:layout_height="122dp"
            android:contentDescription="@string/image_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintCircleRadius="@dimen/_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/image_defaultt" />

        <TextView
            android:id="@+id/tv_title_top_tv"
            android:layout_width="259dp"
            android:layout_height="23dp"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_15dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_semibold"
            android:maxLines="1"
            android:text="@string/title"
            android:textColor="@color/black_main"
            android:textSize="@dimen/_16sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_tv_top_poster"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iv_tv_top_poster"
            app:layout_constraintTop_toTopOf="@+id/iv_tv_top_poster"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_desc_top"
            android:layout_width="259dp"
            android:layout_height="81dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/description"
            android:textColor="@color/black_main"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iv_tv_top_poster"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_top_tv"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>